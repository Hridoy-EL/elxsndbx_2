{% doc %}
  @prompt
    Create a block named 'Row' for a comparison table with the following settings: a text input field labeled 'Feature name', a toggle checkbox labeled 'Us has this feature', and a toggle checkbox labeled 'Others have this feature'. This block should be designed to be added as a repeatable row within a comparison table section. Include proper styling to display as a table row with the feature name in the first column and checkmark/X icons in the other two columns based on the toggle states.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-comparison-row-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    border-bottom: 1px solid #e0e0e0;
    align-items: center;
    min-height: 60px;
    padding: 16px 20px;
    background-color: #ffffff;
    transition: background-color 0.2s ease;
  }

  .ai-comparison-row-{{ ai_gen_id }}:hover {
    background-color: #f9f9f9;
  }

  .ai-comparison-row-feature-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 500;
    color: #333333;
    padding-right: 20px;
  }

  .ai-comparison-row-cell-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .ai-comparison-row-icon-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-comparison-row-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-comparison-row-checkmark-{{ ai_gen_id }} {
    color: #008060;
  }

  .ai-comparison-row-cross-{{ ai_gen_id }} {
    color: #d82c0d;
  }

  @media screen and (max-width: 749px) {
    .ai-comparison-row-{{ ai_gen_id }} {
      padding: 12px 16px;
      min-height: 50px;
    }

    .ai-comparison-row-feature-{{ ai_gen_id }} {
      font-size: 14px;
    }

    .ai-comparison-row-icon-{{ ai_gen_id }} {
      width: 20px;
      height: 20px;
    }
  }
{% endstyle %}

<div class="ai-comparison-row-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-comparison-row-feature-{{ ai_gen_id }}">
    {{ block.settings.feature_name }}
  </div>
  
  <div class="ai-comparison-row-cell-{{ ai_gen_id }}">
    {% if block.settings.us_has_feature %}
      <div class="ai-comparison-row-icon-{{ ai_gen_id }} ai-comparison-row-checkmark-{{ ai_gen_id }}">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
      </div>
    {% else %}
      <div class="ai-comparison-row-icon-{{ ai_gen_id }} ai-comparison-row-cross-{{ ai_gen_id }}">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </div>
    {% endif %}
  </div>
  
  <div class="ai-comparison-row-cell-{{ ai_gen_id }}">
    {% if block.settings.others_have_feature %}
      <div class="ai-comparison-row-icon-{{ ai_gen_id }} ai-comparison-row-checkmark-{{ ai_gen_id }}">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
      </div>
    {% else %}
      <div class="ai-comparison-row-icon-{{ ai_gen_id }} ai-comparison-row-cross-{{ ai_gen_id }}">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Row",
  "tag": null,
  "settings": [
    {
      "type": "text",
      "id": "feature_name",
      "label": "Feature name",
      "default": "Feature"
    },
    {
      "type": "checkbox",
      "id": "us_has_feature",
      "label": "Us has this feature",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "others_have_feature",
      "label": "Others have this feature",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Row"
    }
  ]
}
{% endschema %}
