{% doc %}
  @prompt
    Create a block named 'Row' for a comparison table with the following settings: a text input field labeled 'Feature name', a toggle checkbox labeled 'Us has this feature', and a toggle checkbox labeled 'Others have this feature'. This block should be designed to be added as a repeatable row within a comparison table section. Include proper styling to display as a table row with the feature name in the first column and checkmark/X icons in the other two columns based on the toggle states., i cannot add this to the "comparison table". let me have that ability
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-comparison-table-wrapper-{{ ai_gen_id }} {
    width: 100%;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  .ai-comparison-table-{{ ai_gen_id }} {
    width: 100%;
    border-collapse: collapse;
    background-color: #ffffff;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    overflow: hidden;
  }

  .ai-comparison-table-header-{{ ai_gen_id }} {
    background-color: #f9f9f9;
    border-bottom: 2px solid #e0e0e0;
  }

  .ai-comparison-table-header-{{ ai_gen_id }} th {
    padding: 20px;
    text-align: center;
    font-weight: 600;
    font-size: 16px;
    color: #333333;
  }

  .ai-comparison-table-header-{{ ai_gen_id }} th:first-child {
    text-align: left;
  }

  .ai-comparison-table-row-{{ ai_gen_id }} {
    border-bottom: 1px solid #e0e0e0;
    transition: background-color 0.2s ease;
  }

  .ai-comparison-table-row-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .ai-comparison-table-row-{{ ai_gen_id }}:hover {
    background-color: #f9f9f9;
  }

  .ai-comparison-table-row-{{ ai_gen_id }} td {
    padding: 16px 20px;
    text-align: center;
  }

  .ai-comparison-table-row-{{ ai_gen_id }} td:first-child {
    text-align: left;
    font-weight: 500;
    color: #333333;
  }

  .ai-comparison-table-icon-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .ai-comparison-table-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .ai-comparison-table-checkmark-{{ ai_gen_id }} {
    color: #008060;
  }

  .ai-comparison-table-cross-{{ ai_gen_id }} {
    color: #d82c0d;
  }

  @media screen and (max-width: 749px) {
    .ai-comparison-table-header-{{ ai_gen_id }} th {
      padding: 16px 12px;
      font-size: 14px;
    }

    .ai-comparison-table-row-{{ ai_gen_id }} td {
      padding: 12px;
      font-size: 14px;
    }

    .ai-comparison-table-icon-{{ ai_gen_id }} {
      width: 20px;
      height: 20px;
    }
  }
{% endstyle %}

<div class="ai-comparison-table-wrapper-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <table class="ai-comparison-table-{{ ai_gen_id }}">
    <thead class="ai-comparison-table-header-{{ ai_gen_id }}">
      <tr>
        <th>{{ block.settings.column_1_header }}</th>
        <th>{{ block.settings.column_2_header }}</th>
        <th>{{ block.settings.column_3_header }}</th>
      </tr>
    </thead>
    <tbody>
      <tr class="ai-comparison-table-row-{{ ai_gen_id }}">
        <td>{{ block.settings.feature_name }}</td>
        <td>
          {% if block.settings.us_has_feature %}
            <span class="ai-comparison-table-icon-{{ ai_gen_id }} ai-comparison-table-checkmark-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
          {% else %}
            <span class="ai-comparison-table-icon-{{ ai_gen_id }} ai-comparison-table-cross-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </span>
          {% endif %}
        </td>
        <td>
          {% if block.settings.others_have_feature %}
            <span class="ai-comparison-table-icon-{{ ai_gen_id }} ai-comparison-table-checkmark-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12"></polyline>
              </svg>
            </span>
          {% else %}
            <span class="ai-comparison-table-icon-{{ ai_gen_id }} ai-comparison-table-cross-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </span>
          {% endif %}
        </td>
      </tr>
    </tbody>
  </table>
</div>

{% schema %}
{
  "name": "Comparison row",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Table headers"
    },
    {
      "type": "text",
      "id": "column_1_header",
      "label": "First column header",
      "default": "Feature"
    },
    {
      "type": "text",
      "id": "column_2_header",
      "label": "Second column header",
      "default": "Us"
    },
    {
      "type": "text",
      "id": "column_3_header",
      "label": "Third column header",
      "default": "Others"
    },
    {
      "type": "header",
      "content": "Row content"
    },
    {
      "type": "text",
      "id": "feature_name",
      "label": "Feature name",
      "default": "Feature"
    },
    {
      "type": "checkbox",
      "id": "us_has_feature",
      "label": "Us has this feature",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "others_have_feature",
      "label": "Others have this feature",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Comparison row"
    }
  ]
}
{% endschema %}
