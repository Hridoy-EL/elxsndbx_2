<style>
    .product-info-card {
        padding: 30px 30px;
        background-color: #FFF;
        border: 1px solid #D5D5D5;
        border-radius: 5px;
        box-shadow: 0px 3px 20px #00000029;
        font-family: Montserrat;
        
        h1.product-title {
            font-family: inherit;
            font-size: {{ section.settings.title_font_size }}px;
            font-weight: 600;
            margin: 0;
            margin-bottom: 12px;
            color: {{ section.settings.title_color }};
        }

        p {
            font-family: inherit;
            font-size: {{ section.settings.collection_font_size }}px;
            font-weight: 400;
            color: #000;
            margin: 0;
            margin-bottom: 12px;

            &.product-prices {
                display: flex;
                align-items: end;
                gap: 0.75rem;
                
                .compare-at-price {
                    text-decoration: line-through;
                    color: {{ section.settings.compare_at_color }};
                    font-size: {{ section.settings.compare_at_font_size }}px;
                    font-weight: {{ section.settings.compare_at_font_weight }};
                }

                .price {
                    color: {{ section.settings.price_color }};
                    font-size: {{ section.settings.price_font_size }}px;
                    font-weight: {{ section.settings.price_font_weight }};
                }

                .price-info {
                    color: #000;
                    font-size: {{ section.settings.vat_info_font_size }}px;
                    font-weight: 400;
                    line-height: 2.8;
                }
            }

            &.product-extra-info {
                color: {{ section.settings.extra_info_color }};
                font-size: {{ section.settings.extra_info_font_size }}px;
                font-weight: {{ section.settings.extra_info_font_weight }};
                display: flex;
                align-items: center;
                gap: 1rem;

                span.gdot {
                    display: inline-block;
                    width: {{ section.settings.extra_info_font_size }}px;
                    height: {{ section.settings.extra_info_font_size }}px;
                    border-radius: 50%;
                    background-color: {{ section.settings.extra_info_color }};
                }
            }
        }
    }

    @media only screen and (max-width: 480px) {
        .product-info-card {
            padding: 25px 20px;
        }
    }
</style>

<div class="container">
    <div class="product-info-card">
        <h1 class="product-title">{{ product.title }}</h1>
        {% if section.settings.collection_name_enabled == true %}
            <p class="product-collection">{{ product.collections[0].title }}</p>
        {% endif %}
        <p class="product-prices">
            {% if section.settings.compare_at_enabled == true and product.compare_at_price != blank %}
                <span class="compare-at-price">
                    {{ product.compare_at_price | money_without_currency }}{{ cart.currency.symbol }}
                </span> &nbsp;
            {% endif %}
            <span class="price">
                {{ product.price | money_without_currency }}{{ cart.currency.symbol }}
            </span>
            {% if section.settings.vat_info_enabled == true %}
                <span class="price-info">inkl. MwSt.</span>
            {% endif %}
        </p>
        {% if section.settings.extra_info_enabled == true and product.metafields.custom.extra_info != blank %}
            <p class="product-extra-info">
                <span class="gdot"></span>
                {{ product.metafields.custom.extra_info }}
            </p>
        {% endif %}
        {% render 'atc-button' product: product %}
    </div>
</div>

