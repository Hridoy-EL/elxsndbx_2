<style>
    .product-info-card {
        padding: 30px 30px;
        background-color: #FFF;
        border: 1px solid #D5D5D5;
        border-radius: 5px;
        box-shadow: 0px 3px 20px #00000029;
        font-family: Montserrat;
        
        h1 {
            font-family: inherit;
            font-size: 25px;
            font-weight: 600;
            margin: 0;
            margin-bottom: 12px;
        }

        p {
            font-family: inherit;
            font-size: 18px;
            font-weight: 400;
            color: #000;
            margin: 0;
            margin-bottom: 12px;

            &.product-prices {
                display: flex;
                align-items: end;
                gap: 1rem;
                font-size: 18px;
                font-weight: 600;

                .compare-at-price {
                    text-decoration: line-through;
                    color: #000;
                }

                .price {
                    color: #1F47FF;
                }

                .price-info {
                    color: #000;
                    font-size: 10px;
                    font-weight: 400;
                    line-height: 2.8;
                }
            }

            &.product-extra-info {
                color: #25A525;
                font-size: 15px;
                display: flex;
                align-items: center;
                gap: 1rem;

                span.gdot {
                    display: inline-block;
                    width: 15px;
                    height: 15px;
                    border-radius: 50%;
                    background-color: #25A525;
                }
            }
        }
    }

    @media only screen and (max-width: 480px) {
        .product-info-card {
            padding: 25px 20px;
        }
    }
</style>

<div class="container">
    <div class="product-info-card">
        <h1 class="product-title">{{ product.title }}</h1>
        <p class="product-collection">{{ product.collections[0].title }}</p>
        <p class="product-prices">
            <span class="compare-at-price"> {{ product.compare_at_price | money_without_currency }}{{ cart.currency.symbol }}</span>
            <span class="price">{{ product.price | money_without_currency }}{{ cart.currency.symbol }}</span>
            <span class="price-info">inkl. MwSt.</span>
        </p>
        {% if section.settings.extra_info_enabled == true %}
            <p class="product-extra-info">
                <span class="gdot"></span>
                {{ product.metafields.custom.extra_info }}
            </p>
        {% endif %}
        {% render 'atc-button' product: product %}
    </div>
</div>

