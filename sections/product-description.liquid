<style>
    .product-description {
        color: {{ section.settings.font_color }};
        font-size: {{ section.settings.font_size }}px;
        text-align: {{ section.settings.text-align }};
        font-weight: 400;
        margin-top: 60px;
    }
</style>

<div class="n-container">
    {% if section.settings.description_enabled == true %}
        <div class="product-description">
            {{ product.description }}
        </div>
    {% endif %}
</div>

{% schema %}
{
    "name": "Product Description",
    "settings": [
        {
            "type": "checkbox",
            "id": "description_enabled",
            "label": "Show Product Description"
        },
        {
            "type": "color",
            "id": "font_color",
            "label": "Description Font Color",
            "default": "#000"
        },
        {
            "type": "number",
            "id": "font_size",
            "label": "Description font size",
            "default": 14
        },
        {
            "type": "select",
            "id": "text-align",
            "label": "Description Text Alignment",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ],
            "default": "center"
        }
    ]
}
{% endschema %}